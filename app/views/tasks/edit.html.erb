<div class="container">
<h1>Edit task</h1>
<%= form_with model: @task do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, class: 'form-control' %>
  <%= f.label :details %>
  <%= f.text_field :details, class:'form-control' %>
  <%= f.submit value: "Updata Task", class: 'btn btn-primary mt-1' %>
<% end %>
</div>


<p><%= link_to "Back to list", tasks_path, class: 'text-decoration-none text-danger'%></p>
